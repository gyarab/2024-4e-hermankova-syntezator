<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.synthesiser.SynthController" spacing="10" alignment="CENTER" style="-fx-background-color: #2D2D2D;">
    <Canvas fx:id="oscilloscopeCanvas" width="600" height="150" />
    <Pane fx:id="knobContainer" style="-fx-background-color: #2D2D2D;"/>
    <HBox spacing="10">
        <Button fx:id="sineButton" text="Sine" />
        <Button fx:id="squareButton" text="Square" />
        <Button fx:id="sawButton" text="Saw" />
    </HBox>
    <Button fx:id="startButton" text="Start" />
</VBox>
